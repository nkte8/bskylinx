---
// thanks for https://tailblocks.cc/
import { baseurl, github_url, abouturl } from "@/utils/vars";
import { link } from "@/utils/tailwind_variants";
import App from "@/components/Client/app";
import Loadingcircle from "./loadingcircle.astro";

interface Props {
    hideLoader: boolean;
}
const { hideLoader = false } = Astro.props;
---

<header id="header" class="bg-opacity-90 text-gray-600 body-font bg-white">
    <div
        class="container mx-auto max-w-5xl flex p-1 flex-row items-center sm:h-16 h-14"
    >
        <a
            href={baseurl}
            class="flex-initial title-font font-medium items-center ml-4 mb-0"
        >
            <img src="/materials/longlogo.svg" class="max-w-24 sm:max-w-28" />
        </a>
        <nav
            class="ml-auto flex items-center text-base justify-center"
        >
            <div class="sm:block hidden">
                <a href={abouturl} class={link({ class: "mx-2" })}>About</a>
                <a href={github_url} class={link({ class: "mx-2" })}>Github</a>
            </div>
            <div id="hload">
                {!hideLoader && <Loadingcircle size="s" />}
            </div>
            <App client:only />
        </nav>
    </div>
</header>
